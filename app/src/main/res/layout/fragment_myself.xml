<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_200"
        android:background="@color/bg_action_bar"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/weight_80"
            android:layout_height="@dimen/height_80"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_avatar_editor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:text="李君的推荐码:97bj20"
            android:textColor="@color/white" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/work_manager_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/click_bg_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/ic_work_manager"
                    android:layout_width="@dimen/weight_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_work_manager" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/ic_work_manager"
                    android:text="工作管理" />

                <ImageView
                    android:layout_width="@dimen/weight_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/bg_view" />

            <RelativeLayout
                android:id="@+id/inspection_service_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/click_bg_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/inspection_service"
                    android:layout_width="@dimen/weight_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_inspection_service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/inspection_service"
                    android:text="服务跟踪" />

                <ImageView
                    android:layout_width="@dimen/weight_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/bg_view" />

            <RelativeLayout
                android:id="@+id/work_log_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/click_bg_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/work_log"
                    android:layout_width="@dimen/weight_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_work_log" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/work_log"
                    android:text="工作日志" />

                <ImageView
                    android:layout_width="@dimen/weight_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/bg_view" />

            <RelativeLayout
                android:id="@+id/work_plan_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/click_bg_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/work_plan"
                    android:layout_width="@dimen/weight_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_work_plan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/work_plan"
                    android:text="工作计划" />

                <ImageView
                    android:layout_width="@dimen/weight_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/bg_view" />

            <RelativeLayout
                android:id="@+id/contact_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/click_bg_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/contact"
                    android:layout_width="@dimen/weight_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/contact"
                    android:text="联系平台" />

                <ImageView
                    android:layout_width="@dimen/weight_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/bg_view" />

            <RelativeLayout
                android:id="@+id/recommend_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/click_bg_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/recommend"
                    android:layout_width="@dimen/weight_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_recommend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/recommend"
                    android:text="推荐好友" />

                <ImageView
                    android:layout_width="@dimen/weight_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/bg_view" />

            <RelativeLayout
                android:id="@+id/update_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/click_bg_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/update"
                    android:layout_width="@dimen/weight_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_update" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/update"
                    android:text="软件更新" />

                <ImageView
                    android:layout_width="@dimen/weight_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/bg_view" />

            <RelativeLayout
                android:id="@+id/modify_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/click_bg_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/modify"
                    android:layout_width="@dimen/weight_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_modify" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/modify"
                    android:text="个人信息修改" />

                <ImageView
                    android:layout_width="@dimen/weight_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_arrow_right" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/bg_view" />

            <RelativeLayout
                android:id="@+id/psw_set_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/click_bg_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/psd_set"
                    android:layout_width="@dimen/weight_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_psd_set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/psd_set"
                    android:text="密码设置" />

                <ImageView
                    android:layout_width="@dimen/weight_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/bg_view" />

            <RelativeLayout
                android:id="@+id/project_choice_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:background="@drawable/click_bg_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/project_choice"
                    android:layout_width="@dimen/weight_30"
                    android:layout_height="@dimen/height_30"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_modify" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_toRightOf="@+id/project_choice"
                    android:text="项目组选择" />

                <ImageView
                    android:layout_width="@dimen/weight_20"
                    android:layout_height="@dimen/height_20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_arrow_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/bg_view" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>